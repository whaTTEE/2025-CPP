#include <iostream>
#include <string>
using namespace std;

int main() {
    string str1("Hello"); //생성자 호출로 초기화
    cout << str1 << endl;

     cout << str1[0] << endl;
     cout << str1[1] << endl;
     cout << str1[2] << endl;
     cout << str1[3] << endl;
     cout << str1[4] << endl;

    return 0;
}

//string 라이브러리를 사용하는 이유는 주로 시스템상의 안전성과 편리함 때문
